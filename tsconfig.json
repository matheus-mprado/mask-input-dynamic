{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "declaration": true,     
    "lib": ["es2017", "es7", "es6", "dom"],                         
    "outDir": "./lib",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*"]
}
